{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@tourhunter/api-firebase-service": [
        "libs/api-firebase-service/src/index.ts"
      ],
      "@tourhunter/map": ["libs/map/src/index.ts"],
      "@tourhunter/ui": ["libs/ui/src/index.ts"],
      "@tourhunter/ng-zorro": ["libs/ng-zorro/src/index.ts"],
      "@tourhunter/api-interface": ["libs/api-interface/src/index.ts"],
      "@tourhunter/data-utils": ["libs/data-utils/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
